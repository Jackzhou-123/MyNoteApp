<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 浅色背景色，用于黑金风格中的最浅背景区域，#121212 是接近黑色的深灰色 -->
    <color name="wood_light">#1A1A1A</color>

    <!-- 中等深度背景色，用于略深的背景区块，#2C2C2C 是深灰色 -->
    <color name="wood_medium">#2C2C2C</color>

    <!-- 深色（或强调）颜色，用作强调色，比如按钮或图标的金色，#FFD700 是金色 -->
    <color name="wood_dark">#FFD700</color>

    <!-- 主要文字颜色，#FFFFFF 表示白色，用于主标题、正文文字 -->
    <color name="text_primary">#FFD700</color>

    <!-- 次要文字颜色，#CCCCCC 是浅灰色，用于副标题、辅助信息等次要内容 -->
    <color name="text_secondary">#AAAAAA</color>

    <!-- 纯白色，可以通用在背景、边框、图标等位置 -->
    <color name="white">#FFFFFF</color>

    <!-- 蓝色（在这里你将其设置为金色 #FFD700，说明在黑金主题下重定义为金色） -->
    <color name="blue">#FFD700</color>

    <!-- 绿色，用于成功提示、完成状态等正向反馈元素 -->
    <color name="green">#A8C64A</color>

    <!-- 橙色，用于提醒、警告或强调信息，#FFC107 是一种亮橙色 -->
    <color name="orange">#FFC107</color>

    <!-- 灰色，用于边框、分割线、禁用文字等次要内容 -->
    <color name="gray">#666666</color>

    <!-- 深蓝色（但你设置的是金色 #FFD700，可能是为了统一色调），可用于强调区域背景或按钮 -->
    <color name="deep_blue">#FFD700</color>

    <!-- 图标填充颜色，#FFD700 表示金色，用于统一风格的图标填充颜色 -->
    <color name="icon_fill">#FFD700</color> <!-- 金色 -->
    <color name="tag_text">#1A1A1A</color> <!-- 标签中文字颜色 -->
    <color name="tag_background">#FFD700</color> <!-- 标签背景颜色，金色 -->
</resources>